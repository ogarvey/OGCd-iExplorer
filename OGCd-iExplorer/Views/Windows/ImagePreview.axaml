<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:windows="clr-namespace:OGCdiExplorer.ViewModels.Windows"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        CornerRadius="25"
        x:Class="OGCdiExplorer.Views.Windows.ImagePreview"
        x:DataType="windows:ImagePreviewViewModel"
        Title="ImagePreview">
  <Grid RowDefinitions="100,*">
    <Grid Grid.Row="0" ColumnDefinitions="1*,2*,1*">
      <TextBlock Text="{Binding VideoType}"/>
    </Grid>
    <Panel x:Name="ImageHolder" Grid.Row="1">
      <Image IsVisible="{Binding ShowImage}" Source="{Binding PreviewImg}"/>
    </Panel>
  </Grid>
</Window>
